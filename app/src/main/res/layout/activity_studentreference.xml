<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.mmu.fracgoal.StudentReference">

    <ImageView
        android:id="@+id/back12"
        android:layout_width="76dp"
        android:layout_height="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/aclonica"
        android:text="Reference"
        android:textColor="#000000"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/videoBtn"
        android:layout_width="161dp"
        android:layout_height="102dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button__1_"
        android:fontFamily="@font/aclonica"
        android:text="      Video"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/materialBtn"
        android:layout_width="161dp"
        android:layout_height="102dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button__1_"
        android:fontFamily="@font/aclonica"
        android:text="Learning Material"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoBtn" />

    <Button
        android:id="@+id/explainBtn"
        android:layout_width="161dp"
        android:layout_height="102dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/button__1_"
        android:fontFamily="@font/aclonica"
        android:text="      Stared Explanation"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>